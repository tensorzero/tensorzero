{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProviderTool",
  "type": "object",
  "properties": {
    "scope": {
      "$ref": "#/$defs/ProviderToolScope",
      "default": null
    },
    "tool": true
  },
  "required": [
    "tool"
  ],
  "$defs": {
    "ProviderToolScope": {
      "anyOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "model_name": {
              "type": "string"
            },
            "model_provider_name": {
              "type": "string"
            }
          },
          "required": [
            "model_name",
            "model_provider_name"
          ]
        }
      ]
    }
  }
}