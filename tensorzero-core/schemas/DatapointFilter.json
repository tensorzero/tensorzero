{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DatapointFilter",
  "description": "Filter tree for querying datapoints.\nThis is similar to `InferenceFilter` but without metric filters, as datapoints don't have associated metrics.",
  "oneOf": [
    {
      "title": "TagDatapointFilter",
      "description": "Filter by tag key-value pair",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "tag"
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        {
          "$ref": "#/$defs/TagFilter"
        }
      ]
    },
    {
      "title": "TimeDatapointFilter",
      "description": "Filter by datapoint update time",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "time"
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        {
          "$ref": "#/$defs/TimeFilter"
        }
      ]
    },
    {
      "title": "AndDatapointFilter",
      "description": "Logical AND of multiple filters",
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        },
        "type": {
          "type": "string",
          "const": "and"
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    {
      "title": "OrDatapointFilter",
      "description": "Logical OR of multiple filters",
      "type": "object",
      "properties": {
        "children": {
          "type": "array",
          "items": {
            "$ref": "#"
          }
        },
        "type": {
          "type": "string",
          "const": "or"
        }
      },
      "required": [
        "type",
        "children"
      ]
    },
    {
      "title": "NotDatapointFilter",
      "description": "Logical NOT of a filter",
      "type": "object",
      "properties": {
        "child": {
          "$ref": "#"
        },
        "type": {
          "type": "string",
          "const": "not"
        }
      },
      "required": [
        "type",
        "child"
      ]
    }
  ],
  "$defs": {
    "TagComparisonOperator": {
      "description": "Comparison operators for tag filters.",
      "type": "string",
      "enum": [
        "=",
        "!="
      ]
    },
    "TagFilter": {
      "description": "Filter by tag key-value pair.",
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        },
        "comparison_operator": {
          "$ref": "#/$defs/TagComparisonOperator"
        }
      },
      "required": [
        "key",
        "value",
        "comparison_operator"
      ]
    },
    "TimeComparisonOperator": {
      "description": "Comparison operators for timestamps.",
      "type": "string",
      "enum": [
        "<",
        "<=",
        "=",
        ">",
        ">=",
        "!="
      ]
    },
    "TimeFilter": {
      "description": "Filter by timestamp.",
      "type": "object",
      "properties": {
        "time": {
          "type": "string"
        },
        "comparison_operator": {
          "$ref": "#/$defs/TimeComparisonOperator"
        }
      },
      "required": [
        "time",
        "comparison_operator"
      ]
    }
  }
}
