{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Base64File",
  "description": "A file already encoded as base64",
  "type": "object",
  "properties": {
    "source_url": {
      "type": [
        "string",
        "null"
      ]
    },
    "mime_type": {
      "type": "string"
    },
    "data": {
      "type": "string"
    },
    "detail": {
      "anyOf": [
        {
          "$ref": "#/$defs/Detail"
        },
        {
          "type": "null"
        }
      ]
    },
    "filename": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "mime_type",
    "data"
  ],
  "$defs": {
    "Detail": {
      "description": "Detail level for input images (affects fidelity and token cost)",
      "type": "string",
      "enum": [
        "low",
        "high",
        "auto"
      ]
    }
  }
}
